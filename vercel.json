{
    "version": 2,
    "builds": [
      { "src": "index.html", "use": "@vercel/static" },
      { "src": "js/main.js", "use": "@vercel/static" },
      { "src": "style/style.css", "use": "@vercel/static" },
      { "src": "api/get_weather_data.py", "use": "@vercel/python" },
      { "src": "api/sync_sheets.py", "use": "@vercel/python" }
    ],
    "routes": [
      { "src": "/(.*)", "dest": "/index.html" },
      { "src": "/style/(.*)", "dest": "/style/$1"},
      { "src": "/js/(.*)", "dest": "/js/$1" },
      { "src": "/api/get-weather-data", "dest": "api/get_weather_data.py" },
      { "src": "/api/sync-sheets", "dest": "api/sync_sheets.py" }
    ]
}