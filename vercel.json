{
    "version": 2,
    "builds": [
      { "src": "index.html", "use": "@vercel/static" },
      { "src": "main.js", "use": "@vercel/static" },
      { "src": "style/style.css", "use": "@vercel/static" },
      { "src": "api/get_weather_data.py", "use": "@vercel/python" },
      { "src": "api/sync_weather.py", "use": "@vercel/python" }
    ],
    "routes": [
      { "src": "/(.*)", "dest": "/index.html" },
      { "src": "/style/(.*)", "dest": "/css/$1"},
      { "src": "/(.*)", "dest": "/js/$1" },
      { "src": "/api/weather-data", "dest": "api/get_weather_data.py" },
      { "src": "/api/sync-weather", "dest": "api/sync_weather.py" }
    ]
  }